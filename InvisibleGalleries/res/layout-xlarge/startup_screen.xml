<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/background_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#000000"
        android:alpha="0.75"
        android:layout_gravity="center_horizontal|center_vertical"
        android:contentDescription="@string/background_view_img"
        android:scaleType="fitCenter"/>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

         <TextView
             xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/description_text"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/startup_description"
             android:textSize="36dp"
             android:layout_gravity="center_horizontal"
             android:textColor="#EDECEC"/>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/description_text"
            android:alpha="0.5"
            android:background="#FFFFFF"/>

        <ImageView
            android:id="@+id/start_button"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_below="@+id/divider"
            android:layout_alignRight="@+id/description_text"
            android:contentDescription="@string/startup_button"
            android:src="@drawable/start_button_selector"/>

    </RelativeLayout>
</FrameLayout>
